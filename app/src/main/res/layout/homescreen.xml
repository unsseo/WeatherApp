<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_background"
    android:backgroundTint="#71A78F">

    <!-- 하단 버튼 3개 -->
    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="371dp">

    </LinearLayout>

    <!-- 배경 이미지 -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="500dp"
        android:layout_height="765dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/IMG_7144"
        tools:layout_editor_absoluteX="-30dp" />

    <!-- 월별 날씨 버튼 -->
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#71A78F"
        android:text="월별 날씨"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button"
        tools:layout_editor_absoluteY="502dp" />

    <!-- 지역별 날씨 버튼 -->
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#71A78F"
        android:text="지역별 날씨"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="571dp" />

    <!-- 상세 정보 버튼 -->
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#71A78F"
        android:text="상세 정보"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button"
        tools:layout_editor_absoluteY="435dp" />

    <!-- 위치(공릉동) -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공릉동"
        android:textSize="33sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="36dp" />

    <!-- 온도(12°) -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12°"
        android:textSize="110sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="109dp" />

    <!-- 최고/최저 기온 -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16° / 7°"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="233dp" />

    <!-- 시간(14:02) -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:02"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="84dp" />

    <!-- 날씨 아이콘 1 -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/Group57"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="300dp" />

    <!-- 날씨 아이콘 2 -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/Group4"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="45dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
