<resources>
    <!-- Base -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 공통 속성 -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Light -->
    <style name="AppTheme.Light" parent="AppTheme.Base">
        <item name="colorPrimary">@color/purple_40</item>
        <item name="colorSecondary">@color/purple_grey_40</item>
        <item name="colorTertiary">@color/pink_40</item>
    </style>

    <!-- Dark -->
    <style name="AppTheme.Dark" parent="AppTheme.Base">
        <item name="colorPrimary">@color/purple_80</item>
        <item name="colorSecondary">@color/purple_grey_80</item>
        <item name="colorTertiary">@color/pink_80</item>
    </style>
</resources>
